<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane maxWidth="600.0"
            prefHeight="350.0"
            prefWidth="600.0"
            style="-fx-background-color: #2f3447;"
            xmlns="http://javafx.com/javafx/18"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.course.LoginController">
    <children>
        <TextField fx:id="username" layoutX="205.0" layoutY="119.0" maxHeight="32.0" maxWidth="189.0" prefHeight="32.0"
                   prefWidth="189.0" promptText="UserName"
                   style="-fx-background-color: #2f3447; -fx-border-color: #fff;" AnchorPane.leftAnchor="205.0"
                   AnchorPane.rightAnchor="206.0">
            <font>
                <Font size="14.0"/>
            </font>
        </TextField>
        <PasswordField fx:id="password" layoutX="205.0" layoutY="175.0" prefHeight="25.0" prefWidth="189.0"
                       promptText="Password" style="-fx-background-color: #2f3447; -fx-border-color: #fff;">
            <font>
                <Font size="14.0"/>
            </font>
        </PasswordField>
        <Button fx:id="signup" layoutX="506.0" layoutY="14.0" mnemonicParsing="false" onAction="#sginupAction"
                prefHeight="41.0" prefWidth="79.0" style="-fx-background-color: #3162a4;" text="SignUp "
                textFill="WHITE"/>
        <Button fx:id="login" layoutX="302.0" layoutY="232.0" mnemonicParsing="false" onAction="#loginAction"
                prefHeight="25.0" prefWidth="92.0" style="-fx-background-color: #3162a4;" text="LogIn"
                textFill="WHITE"/>
        <CheckBox fx:id="remember" layoutX="205.0" layoutY="236.0" mnemonicParsing="false" text="Rmember me"
                  textFill="WHITE"/>
        <ImageView fx:id="unilogo" fitHeight="97.0" fitWidth="92.0" layoutX="256.0" layoutY="9.0" pickOnBounds="true"
                   preserveRatio="true">
            <image>
                <Image url="@Images/logo.png"/>
            </image>
        </ImageView>
        <Button fx:id="forgetpassword" layoutX="244.0" layoutY="273.0" mnemonicParsing="false"
                style="-fx-background-color: #2f3447;" text="forget password? " textFill="#aa8f8f" underline="true"/>
        <ImageView fitHeight="41.0" fitWidth="29.0" layoutX="167.0" layoutY="121.0" pickOnBounds="true"
                   preserveRatio="true">
            <image>
                <Image url="@Images/icons8_User_Male_26px.png"/>
            </image>
        </ImageView>
        <ImageView fitHeight="41.0" fitWidth="29.0" layoutX="167.0" layoutY="177.0" pickOnBounds="true"
                   preserveRatio="true">
            <image>
                <Image url="@Images/icons8_Lock_2_64px.png"/>
            </image>
        </ImageView>
        <ImageView fx:id="progress" fitHeight="41.0" fitWidth="79.0" layoutX="273.0" layoutY="298.0" pickOnBounds="true"
                   preserveRatio="true">
            <image>
                <Image url="@Images/output-onlinegiftools.gif"/>
            </image>
        </ImageView>
    </children>
</AnchorPane>
